<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demoplswork.controller.EditProfileController" alignment="CENTER" spacing="10" style="-fx-padding: 20;">
    <TextField fx:id="nameField" promptText="Enter your name" />
    <TextField fx:id="bioField" promptText="Enter your bio" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#onSaveProfile" />
        <Button text="Cancel" onAction="#onCancel" />
    </HBox>
</VBox>
